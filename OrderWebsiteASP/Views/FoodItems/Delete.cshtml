@model OrderWebsiteASP.ViewModels.FoodItems.FoodItemDeleteViewModel
@{
    ViewData["Title"] = "Delete Food Item";
}
<div class="container">
    <h2><i class="bi bi-trash"></i> Delete Food Item</h2>

    <div class="alert alert-warning">
        <h3>Are you sure you want to delete this food item?</h3>
    </div>

    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@Model.Name" />
        }
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>

                <dt class="col-sm-3">Restaurant</dt>
                <dd class="col-sm-9">@Model.RestaurantName</dd>
            </dl>
        </div>
    </div>

    <form asp-controller="FoodItems" asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@Model.RestaurantId" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}