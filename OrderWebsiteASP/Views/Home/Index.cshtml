@model IEnumerable<OrderWebsiteASP.Data.Models.Restaurant>

@{
    ViewData["Title"] = "Home";
}

<div class="welcome-section text-center mb-5">
    <h1>Welcome to FoodOrder</h1>
    <p>Discover delicious food from top restaurants near you. Quick, easy, and tasty!</p>
    @if (!(User?.Identity?.IsAuthenticated ?? false))
    {
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg mt-3 me-2">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg mt-3">Login</a>
    }
</div>

<div class="container">
    <h2 class="mb-4 text-center">Featured Restaurants</h2>
    <div class="row g-4">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4">
                <div class="restaurant-preview">
                    <h3>@restaurant.Name</h3>
                    <p>@restaurant.Address</p>
                    <p>@restaurant.FoodItems.Count() dishes available</p>
                    <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-primary">View Menu</a>
                </div>
            </div>
        }
    </div>
</div>