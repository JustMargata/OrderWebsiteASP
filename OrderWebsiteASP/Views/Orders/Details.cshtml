@model OrderWebsiteASP.Data.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-bag"></i> Order Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-shop"></i> @Model.Restaurant.Name</h5>
            <small class="text-muted">
                <i class="bi bi-calendar"></i> @Model.OrderDate.ToString("dd MMM yyyy HH:mm")
            </small>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var item in Model.OrderItems)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">@item.FoodItem.Name</h6>
                                    <small class="text-muted">$@item.FoodItem.Price.ToString("F2") each</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <form asp-action="DecreaseQuantity" method="post">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <input type="hidden" name="orderId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                    </form>
                                    <span class="badge bg-success fs-6 px-3">@item.Quantity</span>
                                    <form asp-action="IncreaseQuantity" method="post">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <input type="hidden" name="orderId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                    <strong class="text-success ms-2">$@((item.FoodItem.Price * item.Quantity).ToString("F2"))</strong>
                                    <form asp-action="RemoveItem" method="post">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <input type="hidden" name="orderId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="d-flex justify-content-between align-items-center">
                <form asp-action="CancelOrder" method="post">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Cancel Order
                    </button>
                </form>
                <h4>Total: <span class="text-success">$@Model.OrderItems.Sum(oi => oi.FoodItem.Price * oi.Quantity).ToString("F2")</span></h4>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}