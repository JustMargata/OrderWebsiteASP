@model OrderWebsiteASP.Data.Models.Promotion
@{
    ViewData["Title"] = "Delete Promotion";
}
<div class="container">
    <h2><i class="bi bi-trash"></i> Delete Promotion</h2>

    <div class="alert alert-warning">
        <h3>Are you sure you want to delete this promotion?</h3>
    </div>

    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@Model.Title" />
        }
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Discount</dt>
                <dd class="col-sm-9">@Model.DiscountPercent%</dd>

                <dt class="col-sm-3">Restaurant</dt>
                <dd class="col-sm-9">@Model.Restaurant.Name</dd>

                <dt class="col-sm-3">Valid</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</dd>
            </dl>
        </div>
    </div>

    <form asp-controller="Promotions" asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}