@model OrderWebsiteASP.Data.Models.Promotion

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tag"></i> @Model.Title</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Promotions
        </a>
    </div>

    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@Model.Title" />
        }
        <div class="card-body">
            <h3 class="text-success fw-bold">@Model.DiscountPercent% OFF</h3>
            <p class="fs-5">@Model.Description</p>
            <p><i class="bi bi-shop"></i> <strong>Restaurant:</strong> @Model.Restaurant.Name</p>
            <p><i class="bi bi-calendar"></i> <strong>Valid from:</strong> @Model.StartDate.ToString("dd MMM yyyy") <strong>to</strong> @Model.EndDate.ToString("dd MMM yyyy")</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="card-footer d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        }
    </div>
</div>