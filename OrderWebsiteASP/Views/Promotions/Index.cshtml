@model IEnumerable<OrderWebsiteASP.Data.Models.Promotion>

@{
    ViewData["Title"] = "Promotions";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tag"></i> Active Promotions</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Promotion
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No active promotions at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var promotion in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(promotion.ImageUrl))
                        {
                            <img src="@promotion.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@promotion.Title" />
                        }
                        <div class="card-body">
                            <h5 class="card-title text-success fw-bold">@promotion.Title</h5>
                            <p class="card-text">@promotion.Description</p>
                            <p class="card-text">
                                <span class="badge bg-success fs-6">@promotion.DiscountPercent% OFF</span>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-shop"></i> @promotion.Restaurant.Name
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @promotion.StartDate.ToString("dd MMM yyyy") - @promotion.EndDate.ToString("dd MMM yyyy")
                                </small>
                            </p>
                        </div>
                        <div class="card-footer d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@promotion.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@promotion.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@promotion.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>