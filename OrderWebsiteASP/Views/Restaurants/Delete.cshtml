@model OrderWebsiteASP.Data.Models.Restaurant
@{
    ViewData["Title"] = "Delete Restaurant";
}
<div class="container">
    <h2><i class="bi bi-trash"></i> Delete Restaurant</h2>

    <div class="alert alert-warning">
        <h3>Are you sure you want to delete this restaurant?</h3>
    </div>

    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@Model.Name" />
        }
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>