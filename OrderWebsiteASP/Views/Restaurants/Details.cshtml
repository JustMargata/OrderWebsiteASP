@model OrderWebsiteASP.Data.Models.Restaurant
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="mb-4">
        <h2>@Model.Name</h2>
        <p class="text-muted">@Model.Address</p>
    </div>

    <div class="d-flex gap-2 mb-4">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit Restaurant
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete Restaurant
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Menu</h3>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="FoodItems" asp-action="Create" asp-route-restaurantId="@Model.Id" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Food Item
            </a>
        }
    </div>

    @if (Model.FoodItems != null && Model.FoodItems.Any())
    {
        <div class="row">
            @foreach (var foodItem in Model.FoodItems)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="card-title">@foodItem.Name</h5>
                                    <p class="card-text"><strong class="text-success fs-5">$@foodItem.Price.ToString("F2")</strong></p>
                                </div>
                                <div class="d-flex flex-column gap-2">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="FoodItems" asp-action="Edit" asp-route-id="@foodItem.Id" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="FoodItems" asp-action="Delete" asp-route-id="@foodItem.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                    <form asp-controller="Orders" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="foodItemId" value="@foodItem.Id" />
                                        <input type="hidden" name="restaurantId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="bi bi-plus-circle"></i> Add
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No dishes available yet.</p>
    }
</div>