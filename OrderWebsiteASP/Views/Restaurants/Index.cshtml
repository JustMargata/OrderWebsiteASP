@model IEnumerable<OrderWebsiteASP.Data.Models.Restaurant>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Restaurants";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Restaurants</h2>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Restaurant
            </a>
        }
    </div>

    <div class="row">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="restaurant-preview">
                    <h3>@restaurant.Name</h3>
                    <p>@restaurant.Address</p>
                    <p>@(restaurant.FoodItems?.Count ?? 0) dishes available</p>
                    <a asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-primary">
                        <i class="bi bi-eye"></i> View Menu
                    </a>
                </div>
            </div>
        }
    </div>
</div>