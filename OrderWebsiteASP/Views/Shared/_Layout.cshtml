<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodOrder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="header shadow-sm py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a class="navbar-brand me-4" href="/">FoodOrder</a>
                <a asp-area="" asp-controller="Restaurants" asp-action="Index" class="nav-link-custom">Restaurants</a>
                <a asp-area="" asp-controller="Promotions" asp-action="Index" class="nav-link-custom">Promotions</a>
            </div>
            <nav class="d-flex align-items-center">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="me-3">
                        Hi, <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-decoration-underline text-white">
                            @User.Identity.Name
                        </a>
                    </span>
                    <a asp-area="" asp-controller="Orders" asp-action="Index" class="btn btn-outline-light me-2">My Orders</a>
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light me-2 fs-5">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light fs-5">Register</a>
                }
            </nav>
        </div>
    </header>
    <main class="flex-fill">
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>
    <footer class="footer text-white mt-auto py-3 shadow-top">
        <div class="container text-center">
            &copy; @DateTime.Now.Year FoodOrder. All rights reserved.
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>